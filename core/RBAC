apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: app-readonly-no-secrets
  namespace: appstore
rules:
  - apiGroups: [""]
    resources: ["pods", "services", "configmaps"]
    verbs: ["get", "list", "watch"]
  - apiGroups: [""]
    resources: ["secrets"]
    verbs: []  # sem acesso a secrets
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: app-readonly-no-secrets-binding
  namespace: appstore
subjects:
  - kind: User
    name: algum.usuario@stormx.com.br
roleRef:
  kind: Role
  name: app-readonly-no-secrets
  apiGroup: rbac.authorization.k8s.io
